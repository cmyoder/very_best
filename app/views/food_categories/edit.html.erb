<!-- Validation failure messages -->
<% if @food_category.errors.any? %>
  <% @food_category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Food Category #<%= @food_category.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_food_category/<%= @food_category.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for cousine_id -->
      <div class="form-group">
        <label for="cousine_id" class="control-label">
          Cousine
        </label>

        <%= select_tag(:cousine_id, options_from_collection_for_select(Cousine.all, :id, :name, @food_category.cousine_id), :class => "form-control") %>
      </div>

      <!-- Label and input for dish_id -->
      <div class="form-group">
        <label for="dish_id" class="control-label">
          Dish
        </label>

        <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :name, @food_category.dish_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Food Category
      </button>
      or
      <a href="/food_categories/<%= @food_category.id %>">Cancel</a>
    </form>
  </div>
</div>
